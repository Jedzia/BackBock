<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Jedzia.BackBock.Application.Editors.TaskWizard.TaskWizardStartPage"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480">

	<Grid x:Name="LayoutRoot">
		<RichTextBox x:Name="richTextBox" Margin="2" FontWeight="Bold" FontSize="21.333" IsReadOnly="True">
			<FlowDocument>
				<Paragraph><Run Language="de-de" Text="Welcome to the Task Wizard"/></Paragraph>
				<Paragraph><Run FontWeight="Normal" FontSize="10.667" Language="de-de" Text="This wizard will help you to create backup content."/></Paragraph>
			</FlowDocument>
		</RichTextBox>
	</Grid>
</UserControl>